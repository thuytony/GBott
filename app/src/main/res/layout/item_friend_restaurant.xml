<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tagview="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/padding_item_chat"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_item_chat"
        android:background="@android:color/transparent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ic_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_avatar_default"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ic_avatar"
            android:layout_marginLeft="@dimen/padding_item_chat">
        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/txtFriendOneChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:custom_font="DroidSerif-Regular"
            android:background="@drawable/bg_friend_chat"
            android:textSize="@dimen/text_size_high"
            android:textColor="@color/colorTextChat"
            android:text="Friend chat"
            android:padding="@dimen/padding_item_chat"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_item_chat"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/bg_friend_chat"
        android:layout_marginLeft="@dimen/padding_item_chat"
        android:layout_marginRight="@dimen/padding_item_chat"
        android:layout_marginTop="@dimen/padding_item_chat">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="@dimen/padding_item_chat">
        <ImageView
            android:id="@+id/itemOneImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/img_restau"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_icon"
                android:paddingRight="@dimen/padding_icon"
                android:paddingTop="@dimen/padding_item_chat"
                android:paddingBottom="@dimen/padding_item_chat"
                android:background="#b6ffffff"
                android:layout_alignParentBottom="true"
                android:gravity="center">
                <gcam.vn.gbot.view.widget.FontTextView
                    android:id="@+id/txtAboutPriceOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:custom_font="DroidSerif-Regular"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/colorBgTagSearchThree"
                    android:text="$$$: (100k - 300k) | Giảm 30% với bufet"
                    android:lines="1"
                    android:singleLine="true"/>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/margin_item_screen">
            <gcam.vn.gbot.view.widget.FontTextView
                android:id="@+id/txtDescripOneChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:custom_font="DroidSerif-Regular"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/colorTextChat"
                android:text="Friend chat"
                android:maxLines="2" />
            <gcam.vn.gbot.view.widget.FontTextView
                android:id="@+id/txtAddressRestaurantOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:custom_font="DroidSerif-Regular"
                android:textSize="@dimen/text_size_normal"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/colorGrayText"
                android:text="159 Hoàng Mai - Hà Nội"
                android:maxLines="1"
                android:singleLine="true" />
            <gcam.vn.gbot.view.widget.FontTextView
                android:id="@+id/txtChuyenMonOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:custom_font="DroidSerif-Regular"
                android:textSize="@dimen/text_size_normal"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/colorText"
                android:text="Chuyên hải sản"
                android:maxLines="1"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/padding_item_chat"
            android:layout_marginRight="@dimen/padding_item_chat"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcActionOneRestau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false" />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/tagViewOneRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clipToPadding="false"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/padding_item_chat"
        android:layout_marginRight="@dimen/padding_item_chat"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_suggesstion_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clipToPadding="false"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/padding_item_chat"
        android:layout_marginRight="@dimen/padding_item_chat"/>
    <gcam.vn.gbot.view.widget.FontTextView
        android:id="@+id/itemOneTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_centerVertical="true"
        android:text="Sample title"
        android:textColor="@color/colorDetailChat"
        app:custom_font="DroidSerif-Regular"
        android:textSize="@dimen/text_size_normal"
        android:layout_marginLeft="@dimen/padding_item_chat"
        android:maxLines="1"
        android:singleLine="true"/>
</LinearLayout>