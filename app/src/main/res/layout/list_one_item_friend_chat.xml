<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ic_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_avatar_default"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/itemOneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/ic_avatar"
            android:text="Sample title"
            android:textColor="@android:color/black"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_large" />

        <gcam.vn.gbot.view.widget.FontButton
            android:id="@+id/btnOneMore"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_toRightOf="@id/itemTitle"
            android:layout_centerVertical="true"
            android:text="more"
            android:textColor="#FFF"
            app:custom_font="DroidSerif-Regular"
            android:visibility="invisible"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/txtFriendOneChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:text="Friend chat"
            android:background="@drawable/bg_friend_chat"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:maxLines="3" />
        <ImageView
            android:id="@+id/itemOneImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:padding="10dp" />


        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/txtDescripOneChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_medium"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:text="Friend chat"
            android:background="@drawable/bg_friend_chat"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:maxLines="3" />
        <gcam.vn.gbot.view.widget.FontButton
            android:id="@+id/btnFriendOneChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="Đặt bàn"
            android:textColor="@android:color/black"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_large"
            android:textAllCaps="false" />


    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>