<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_item_chat"
        android:background="@android:color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_item_chat"
        android:background="@android:color/transparent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ic_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_avatar_default"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/itemOneTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/ic_avatar"
            android:text="Sample title"
            android:textColor="@android:color/black"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_high"
            android:layout_marginLeft="@dimen/padding_item_chat"/>

        <gcam.vn.gbot.view.widget.FontButton
            android:id="@+id/btnOneMore"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_toRightOf="@id/itemTitle"
            android:layout_centerVertical="true"
            android:text="more"
            android:textColor="#FFF"
            app:custom_font="DroidSerif-Regular"
            android:visibility="invisible"/>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_item_chat"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/bg_friend_chat">

        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/txtFriendOneChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_high"
            android:gravity="left"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextChat"
            android:text="Friend chat"
            android:padding="@dimen/padding_item_chat"
            android:maxLines="3" />
        <ImageView
            android:id="@+id/itemOneImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:padding="@dimen/padding_item_chat" />


        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/txtDescripOneChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextChat"
            android:text="Friend chat"
            android:padding="@dimen/padding_item_chat"
            android:maxLines="3" />
        <gcam.vn.gbot.view.widget.FontButton
            android:id="@+id/btnFriendOneChat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="Đặt bàn"
            android:textColor="@android:color/black"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_medium"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_default"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    </LinearLayout>