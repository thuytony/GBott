<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <gcam.vn.gbot.view.widget.UiToolBarBack
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/title_chat"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcChat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layoutFooter"/>
        <LinearLayout
            android:id="@+id/layoutFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/padding_footer_chat"
            android:paddingLeft="@dimen/padding_footer_chat">
            <ImageView
                android:id="@+id/imgEmoji"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_emoji"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@id/edtChat"/>
            <gcam.vn.gbot.view.widget.FontMaterialEditText
                android:id="@+id/edtChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_high"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:hint="Ná»™i dung"
                android:layout_toLeftOf="@id/imgSend"
                android:layout_toRightOf="@+id/imgEmoji"
                app:met_floatingLabel="none"
                app:met_maxCharacters="200"
                app:met_primaryColor="@color/colorGrayText"
                app:met_underlineColor="@color/colorLine"
                app:custom_font="DroidSerif-Regular"
                android:maxLines="3"/>
            <ImageView
                android:id="@+id/imgSend"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_not_send"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@id/edtChat"/>
        </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>