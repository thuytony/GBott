<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingRight="10dp">
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    android:background="@drawable/bg_friend_chat">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/bg_friend_chat"
        android:padding="@dimen/padding_item_chat">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="@dimen/padding_item_chat">
            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/img_restau" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_icon"
                android:background="#b6ffffff"
                android:layout_alignParentBottom="true"
                android:gravity="center|left">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <gcam.vn.gbot.view.widget.FontTextView
                        android:id="@+id/txtAboutPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:custom_font="DroidSerif-Regular"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/colorBgTagSearchThree"
                        android:text="$$$: (100k - 300k) | Giảm 30% với bufet"
                        android:lines="1"
                        android:singleLine="true"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/txt_friend_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/colorTextItem"
            android:text="Friend chat"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/margin_item_screen"/>
        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/txtAddressRestaurant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/colorGrayText"
            android:text="159 Hoàng Mai - Hà Nội"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/margin_item_screen"/>
        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/txtChuyenMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/colorText"
            android:text="Chuyên hải sản"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/margin_item_screen"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="@dimen/padding_item_chat"
            android:layout_marginRight="@dimen/padding_item_chat"
            android:layout_marginTop="7dp"
            android:gravity="center">
            <gcam.vn.gbot.view.widget.FontButton
                android:id="@+id/btnFriendChat"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="Đặt bàn"
                android:textColor="@android:color/white"
                app:custom_font="DroidSerif-Regular"
                android:textSize="@dimen/text_size_normal"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_default"
                android:layout_marginRight="7dp"/>
            <gcam.vn.gbot.view.widget.FontButton
                android:id="@+id/btnMenu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="Menu"
                android:textColor="@android:color/white"
                app:custom_font="DroidSerif-Regular"
                android:textSize="@dimen/text_size_normal"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_default"
                android:layout_marginRight="7dp"/>
            <gcam.vn.gbot.view.widget.FontButton
                android:id="@+id/btnDetailRestaurants"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="Chi tiết"
                android:textColor="@android:color/white"
                app:custom_font="DroidSerif-Regular"
                android:textSize="@dimen/text_size_normal"
                android:textAllCaps="false"
                android:background="@drawable/bg_button_default" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>