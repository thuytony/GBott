<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:paddingRight="10dp">
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardCornerRadius="5dp"
    android:background="@drawable/bg_friend_chat">
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/bg_friend_chat"
        android:padding="@dimen/padding_item_chat">

        <gcam.vn.gbot.view.widget.RoundRectCornerImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/img_restau"
            android:padding="@dimen/padding_item_chat" />


        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/txt_friend_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_large"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextItem"
            android:text="Friend chat"
            android:maxLines="2"
            android:lines="2"/>
        <gcam.vn.gbot.view.widget.FontButton
            android:id="@+id/btnFriendChat"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="Đặt bàn"
            android:textColor="@android:color/white"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_medium"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_default"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>