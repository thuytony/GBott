<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:padding="@dimen/padding_item_chat">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_item_chat">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ic_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_my_chat"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/itemMyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/ic_avatar"
            android:text="Sample title"
            android:textColor="@android:color/black"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_large"
            android:layout_marginRight="@dimen/padding_item_chat"/>

    <gcam.vn.gbot.view.widget.FontButton
        android:id="@+id/btnMyMore"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_toStartOf="@+id/itemMyTitle"
        android:text="more"
        android:textColor="#FFF"
        app:custom_font="DroidSerif-Regular"
        android:visibility="invisible"/>
        </RelativeLayout>

<gcam.vn.gbot.view.widget.FontTextView
    android:id="@+id/txt_my_chat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:custom_font="DroidSerif-Regular"
    android:textSize="@dimen/text_size_high"
    android:textColor="@color/colorText"
    android:text="Friend chat"
    android:gravity="right"
    android:layout_gravity="right"
    android:background="@drawable/bg_my_chat"
    android:paddingTop="@dimen/padding_item_chat"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"/>
    </LinearLayout>
</RelativeLayout>