<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    android:padding="@dimen/padding_main_screen"
    tools:context="gcam.vn.gbot.view.activity.LoginActivity">

    <gcam.vn.gbot.view.widget.FontTextView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="GBot"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_logo"
        android:textStyle="italic|bold"
        app:custom_font="DroidSerif-Regular"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/img_logo"
        android:gravity="center">
        <gcam.vn.gbot.view.widget.FontEditText
            android:id="@+id/edtUserName"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Nhập tên đăng nhập"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            android:nextFocusDown="@+id/edtPass"
            android:inputType="text"
            android:imeOptions="actionNext"
            app:custom_font="DroidSerif-Regular"
            android:drawableLeft="@drawable/ic_login"
            android:background="#11000000"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:layout_marginBottom="30dp"/>
        <gcam.vn.gbot.view.widget.FontEditText
            android:id="@+id/edtPass"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Nhập mật khẩu"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            app:custom_font="DroidSerif-Regular"
            android:drawableLeft="@drawable/ic_pass"
            android:background="#11000000"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:padding="5dp"
            android:layout_marginBottom="70dp"/>
        <gcam.vn.gbot.view.widget.FontButton
            android:id="@+id/btnLogin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            app:custom_font="DroidSerif-Regular"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_login"/>
    </LinearLayout>
</RelativeLayout>
