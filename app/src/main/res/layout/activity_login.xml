<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    tools:context="gcam.vn.gbot.view.activity.LoginActivity"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="GBot"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_logo"
            android:textStyle="italic|bold"
            app:custom_font="DroidSerif-Regular"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/margin_left_right_edt_login"
        android:layout_marginRight="@dimen/margin_left_right_edt_login"
        android:layout_marginTop="@dimen/padding_main_screen"
        android:layout_marginBottom="@dimen/padding_main_screen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_main_screen"
        android:layout_alignParentTop="true">
        <gcam.vn.gbot.view.widget.FontEditText
            android:id="@+id/edtUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên đăng nhập"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            android:nextFocusDown="@+id/edtPass"
            android:inputType="text"
            android:imeOptions="actionNext"
            app:custom_font="DroidSerif-Regular"
            android:drawableLeft="@drawable/ic_login"
            android:background="@drawable/bg_edt_login"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:padding="@dimen/padding_main_screen" />
        <gcam.vn.gbot.view.widget.FontEditText
            android:id="@+id/edtPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mật khẩu"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="@dimen/text_size_medium"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            app:custom_font="DroidSerif-Regular"
            android:drawableLeft="@drawable/ic_pass"
            android:background="@drawable/bg_edt_login"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:padding="@dimen/padding_main_screen"
            android:layout_marginTop="@dimen/margin_item_screen"/>
        <gcam.vn.gbot.view.widget.FontTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textColor="@color/colorToastInfo"
            android:textSize="@dimen/text_size_normal"
            app:custom_font="DroidSerif-Regular"
            android:gravity="right"
            android:padding="@dimen/margin_item_screen" />
    </LinearLayout>
    <gcam.vn.gbot.view.widget.FontButton
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_medium"
        app:custom_font="DroidSerif-Regular"
        android:textAllCaps="false"
        android:background="@drawable/bg_button_login"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/margin_left_right_edt_login"
        android:layout_marginLeft="@dimen/margin_left_right_edt_login"
        android:drawableRight="@drawable/ic_next"/>
</RelativeLayout>
</LinearLayout>
