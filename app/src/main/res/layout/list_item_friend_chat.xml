<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:selectableItemBackground"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ic_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_avatar_default"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/white"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <gcam.vn.gbot.view.widget.FontTextView
            android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/ic_avatar"
            android:text="Sample title"
            android:textColor="@android:color/black"
            app:custom_font="DroidSerif-Regular"
            android:textSize="@dimen/text_size_large" />

        <gcam.vn.gbot.view.widget.FontButton
            android:id="@+id/btnMore"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_toRightOf="@id/itemTitle"
            android:layout_centerVertical="true"
            android:text="more"
            android:textColor="#FFF"
            app:custom_font="DroidSerif-Regular"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <gcam.vn.gbot.view.widget.FontTextView
        android:id="@+id/txt_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:custom_font="DroidSerif-Regular"
        android:textSize="@dimen/text_size_medium"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:text="Answer chat"
        android:background="@drawable/bg_friend_chat"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:maxLines="1"
        android:singleLine="true"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" />
    </LinearLayout>


</LinearLayout>