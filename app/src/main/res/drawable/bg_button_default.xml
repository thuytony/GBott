<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorButtonDefaultPress"></solid>
            <corners
                android:radius="600dp" />
            <padding
                android:left="5dp"
                android:top="0dp"
                android:right="5dp"
                android:bottom="0dp" />
            <stroke
                android:width="3px" android:color="#35c4b5b5"/>
        </shape>
    </item>

    <item  android:state_focused="true">
        <shape>
            <solid
                android:color="@color/colorButtonDefaultPress"></solid>
            <corners
                android:radius="600dp" />
            <padding
                android:left="5dp"
                android:top="0dp"
                android:right="5dp"
                android:bottom="0dp" />
            <stroke
                android:width="3px" android:color="#35c4b5b5"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/colorButtonDefault"></solid>
            <corners
                android:radius="600dp" />
            <padding
                android:left="5dp"
                android:top="0dp"
                android:right="5dp"
                android:bottom="0dp" />
            <stroke
                android:width="3px" android:color="#35c4b5b5"/>
        </shape>
    </item>
</selector>